<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="10dp"
    app:cardCornerRadius="12dp"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:id="@+id/image_product"
            />
        <TextView
            android:id="@+id/name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cat Name"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/productmrplabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="MRP."
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/productmrpprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/productmrplabel"
                android:layout_marginLeft="10dp"
                android:text="9999"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/productpricelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Rs."
                android:textColor="@android:color/black"
                android:layout_below="@id/productmrpprice"
                android:layout_marginTop="10dp"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/productpricelabel"
                android:text="9999"
                android:textColor="@android:color/black"
                android:layout_below="@id/productmrpprice"
                android:layout_marginTop="10dp"
                android:textSize="18dp"/>

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_favorite_24"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/wish"
                />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>