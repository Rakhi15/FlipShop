<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLoginActivity"
    android:background="#383F42">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/iconlogo"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/icon_transparent"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andika"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="42dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/image1"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginTop="19dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/andika"
            android:text="Login"
            android:textColor="#FDF5DC"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/loginLink"
            android:clickable="true"
            android:fontFamily="@font/andika"
            android:onClick="OpenSignup"
            android:text="Signup"
            android:textColor="#FDF5DC"
            android:textSize="22dp"
            android:textStyle="bold" />
        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_below="@id/loginLink"
            android:background="#FFFFFF"
            android:layout_marginLeft="30dp"
            android:id="@+id/indicatelogin"
            />
        <View
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_below="@id/loginLink"
            android:layout_toRightOf="@id/indicatelogin"
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear2"
            android:background="@drawable/linearbg"
            android:orientation="vertical"
            android:layout_below="@id/indicatelogin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/usernameEd"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:hint="Email"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:background="@drawable/editbox_bg"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/passwordEd"
                android:inputType="textPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Password"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox_bg"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Remember Me"
                android:textColor="@android:color/white"
                android:layout_marginBottom="30dp"
                />

            <Button
                android:id="@+id/login"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:text="Login"
                android:layout_marginBottom="20dp"
                android:elevation="7dp"
                android:background="@drawable/buttonbg"
                />

        </LinearLayout>



    </RelativeLayout>

</ScrollView>
