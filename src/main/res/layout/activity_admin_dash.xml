<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashActivity"
    android:background="#D7EAF3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/card1"
            app:cardMaxElevation="7dp"
            android:elevation="5dp"
            app:cardCornerRadius="14dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TableRow
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        android:padding="10dp"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">


                        <Button
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/cat1"
                            android:background="@drawable/ic_baseline_add_to_photos_24"
                            android:layout_column="1"
                            android:onClick="openAdminCatAdd"
                            />
                        <Button
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/cat2"
                            android:background="@drawable/ic_baseline_delete_forever_24"
                            android:layout_column="2"
                            />

                        <Button
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/cat3"
                            android:background="@drawable/ic_baseline_format_list_numbered_rtl_24"
                            android:layout_column="3"/>



                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Add"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:text="Delete"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:text="ReOrder"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal"
                        />

                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/card2"
            app:cardMaxElevation="7dp"
            android:elevation="5dp"
            app:cardCornerRadius="14dp"
            app:cardBackgroundColor="#7FEDE3"
            android:layout_marginBottom="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TableRow
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        android:padding="10dp"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">


                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pro1"
                        android:background="@drawable/ic_baseline_add_to_photos_24"
                        android:layout_column="1"
                        android:onClick="openAddProduct"
                        />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pro2"
                        android:background="@drawable/ic_baseline_delete_forever_24"
                        android:layout_column="2"
                        />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/pro3"
                        android:background="@drawable/ic_baseline_format_list_numbered_rtl_24"
                        android:layout_column="3"/>



                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Add"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:text="Delete"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:text="Update"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal"
                        />

                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</ScrollView>