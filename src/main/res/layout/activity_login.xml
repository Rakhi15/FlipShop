<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/themeColor">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/iconlogo"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/icon_transparent"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="42dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/image1"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_baseline_double_arrow_24"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/loginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/carrois_gothic_sc"
        android:text="Login"
        android:textColor="#FDF5DC"
        android:textStyle="bold"
        android:textSize="22dp" />
    <TextView
        android:id="@+id/registerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_toRightOf="@id/loginLink"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/carrois_gothic_sc"
        android:text="Signup"
        android:textColor="#FDF5DC"
        android:textStyle="bold"
        android:textSize="22dp"
        android:clickable="true"
        android:onClick="OpenSignup"/>
    <View
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_below="@id/loginLink"
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:id="@+id/indicatelogin"
        />
    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:layout_below="@id/loginLink"
        android:layout_toRightOf="@id/indicatelogin"
        android:background="#FFFFFF"
        android:layout_marginLeft="15dp"
        android:visibility="invisible"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:background="@drawable/linearbg"
        android:orientation="vertical"
        android:layout_below="@id/indicatelogin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/usernameEd"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:hint="Email"
            android:textColorHint="#FDF5DC"
            android:paddingLeft="20dp"
            android:background="@drawable/editbox_bg"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/passwordEd"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Password"
            android:textColorHint="#FDF5DC"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/editbox_bg"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="Remember Me"
            android:textColor="@android:color/white"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="Login"
            android:layout_marginBottom="20dp"
            android:elevation="7dp"
            android:background="@drawable/buttonbg"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login with"
        android:textColor="@android:color/white"
        android:layout_below="@id/linear2"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="18dp"
        />
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text3"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/githublink"
            android:background="@drawable/github"
            android:padding="10dp"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/googlelink"
            android:background="@drawable/google_icon"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/facebooklink"
            android:background="@drawable/facebook"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/instagramlink"
            android:background="@drawable/instagram"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you a Admin"
        android:textColor="@android:color/white"
        android:layout_below="@id/linear3"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:onClick="openAdminLogin"
        />


</RelativeLayout>