<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity"
    android:background="#5B666A">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear2"

            android:orientation="vertical"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD PRODUCTS"
                android:fontFamily="@font/andika"
                android:layout_marginTop="40dp"
                android:textSize="28dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"

                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/category_spinner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:background="@drawable/editbox_bg"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearNew"
                android:orientation="vertical"
                android:visibility="invisible">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/brand"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="BRAND"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox_bg"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="NAME/MODEL"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox_bg"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/mrp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="MRP"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox_bg"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/price"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="PRICE"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox_bg"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="COLOR"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox_bg"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/stock"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="STOCK"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox_bg"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/size"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="SIZE"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/editbox_bg"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/description_ed"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Description"
                android:textColorHint="#FDF5DC"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:background="@drawable/editbox_bg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thumbnail"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/pick_pic"
                    android:background="@drawable/ic_baseline_camera_alt_24"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/selected_pic"
                    android:layout_marginLeft="80dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pics"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/pick_pic_pht1"
                    android:background="@drawable/ic_baseline_camera_alt_24"
                    android:layout_margin="7dp"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/pick_pic_pht2"
                    android:layout_margin="7dp"
                    android:background="@drawable/ic_baseline_camera_alt_24"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/pick_pic_pht3"
                    android:layout_margin="7dp"
                    android:background="@drawable/ic_baseline_camera_alt_24"
                    />


            </LinearLayout>


            <Button
                android:id="@+id/uploadBtn"
                android:layout_width="180dp"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="Upload Product"
                android:layout_marginBottom="30dp"
                android:elevation="7sp"
                android:background="@drawable/buttonbg"
                />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>